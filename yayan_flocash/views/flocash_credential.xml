<odoo>
  <record id="view_payment_provider_form_flocash" model="ir.ui.view">
    <field name="name">payment.provider.form.flocash</field>
    <field name="model">payment.provider</field>
    <field name="inherit_id" ref="payment.payment_provider_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
            <page string="Flocash" name="flocash_page" invisible="code != 'flocash'">
                <group>
                <field name="flocash_api_username"/>
                <field name="flocash_api_password" password="True"/>
                <field name="flocash_merchant_account"/>
                <field name="flocash_environment"/>
                </group>
            </page>
        </xpath>
    </field>
  </record>

  <record id="view_move_form_flocash" model="ir.ui.view">
    <field name="name">account.move.form.flocash</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">

      <!-- letakkan di tab Other Info -->
      <xpath expr="//sheet/notebook/page[@name='other_info']/group" position="inside">
        <group string="Flocash">
          <field name="flocash_payment_option"/>
          <field name="flocash_link" readonly="1"/>
        </group>
      </xpath>

    </field>
  </record>
</odoo>
